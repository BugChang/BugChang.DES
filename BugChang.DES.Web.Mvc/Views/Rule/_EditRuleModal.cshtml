@model BugChang.DES.Application.Rules.Dtos.RuleEditDto
@using BugChang.DES.Web.Mvc.Models.Common
<form id="RuleEditForm" method="post" asp-controller="Rule" asp-action="Edit">
    @Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("修改条码规则"))
    <div class="modal-body">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="CreateBy" value="@Model.CreateBy" />
        <input type="hidden" asp-for="CreateTime" value="@Model.CreateTime" />
        <input type="hidden" asp-for="UpdateBy" value="@Model.UpdateBy" />
        <input type="hidden" asp-for="UpdateTime" value="@Model.UpdateTime" />
        <input type="hidden" id="DefaultValue" data-barcode-type="@Model.BarcodeType" />
        <div class="form-group">
            <label>名称</label>
            <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
        </div>
        <div class="form-group">
            <label>条码类型</label>
            <select asp-for="BarcodeType" class="edit-barcode-type-select form-control" style="width: 100%"></select>
        </div>
        <div class="form-group">
            <label>不登记投箱</label>
            <select asp-for="NoRegisterSend" class="form-control" style="width: 100%">
                <option value="true" @(Model.NoRegisterSend?"selected")>是</option>
                <option value="false" @(!Model.NoRegisterSend?"selected=\"selected\"")>否</option>
            </select>
        </div>
        <div class="form-group">
            <label>解析条码单位</label>
            <select asp-for="IsAnalysisDepartment" class="form-control" style="width: 100%">
                <option value="true" @(Model.IsAnalysisDepartment?"selected=\"selected\"":"")>是</option>
                <option value="false" @(Model.IsAnalysisDepartment?"":"selected=\"selected\"")>否</option>
            </select>
        </div>
        <div class="form-group">
            <label>解析单位级别</label>
            <input type="number" asp-for="AnalysisDepartmentLevel" class="form-control" value="@Model.AnalysisDepartmentLevel" />
        </div>
    </div>
    @Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>
<script src="~/views-resource/rule/_editRuleModal.js" asp-append-version="true"></script>