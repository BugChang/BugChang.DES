@using BugChang.DES.Web.Mvc.Models.Common
@section css
    {
    <link href="~/lib/zTree/css/metroStyle/metroStyle.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
}
<div class="row">
    <div class="col-xs-2">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">机构树</h3>
            </div>
            <div class="box-body">
                <ul id="departmentTree" class="ztree"></ul>
            </div>
        </div>

    </div>
    <div class="col-xs-10">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <div class="btn-group">
                            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#DepartmentCreateModal" data-backdrop="static" data-keyboard="false">新增</button>
                            <button type="submit" class="btn btn-primary">查询</button>
                        </div>
                    </div>
                    <div class="box-body">
                        <table id="table" class="table table-bordered table-hover"></table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="DepartmentCreateModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="DepartmentCreateForm" method="post" asp-controller="Department" asp-action="Edit">
                @Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("新增机构"))
                <div class="modal-body">
                    <div class="form-group">
                        <label>上级机构</label>
                        <select class="form-control select2" name="ParentId" style="width: 100%"></select>
                    </div>
                    <div class="form-group">
                        <label>名称</label>
                        <input type="text" class="form-control" name="Name">
                    </div>
                    <div class="form-group">
                        <label>全称</label>
                        <input type="text" class="form-control" name="FullName" placeholder="无特殊情况无需填写">
                    </div>
                    <div class="form-group">
                        <label>机构代码</label>
                        <input type="text" class="form-control" name="Code">
                    </div>
                </div>
                @Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
@section scripts
    {
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/lib/select2/js/i18n/zh-CN.js"></script>
    <script src="~/lib/zTree/js/jquery.ztree.all.min.js"></script>
    <script src="~/views-resource/department/index.js" asp-append-version="true"></script>
}