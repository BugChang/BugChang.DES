@model BugChang.DES.Application.Menus.Dtos.MenuEditDto
@using BugChang.DES.Web.Mvc.Models.Common
<form id="MenuEditForm" method="post" asp-controller="Menu" asp-action="Edit">
    @Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("修改菜单"))
    <div class="modal-body">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="CreateBy" value="@Model.CreateBy" />
        <input type="hidden" asp-for="CreateTime" value="@Model.CreateTime" />
        <input type="hidden" asp-for="UpdateBy" value="@Model.UpdateBy" />
        <input type="hidden" asp-for="UpdateTime" value="@Model.UpdateTime" />
        <div class="form-group">
            <label>上级菜单</label>
            <select class="form-control select2" asp-for="ParentId" style="width: 100%" value="@Model.ParentId"></select>
        </div>
        <div class="form-group">
            <label>名称</label>
            <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
        </div>
        <div class="form-group">
            <label>描述</label>
            <textarea class="form-control" asp-for="Description" rows="3">@Model.Description</textarea>
        </div>
        <div class="form-group">
            <label>菜单地址</label>
            <input type="text" class="form-control" asp-for="Url" value="@Model.Url">
        </div>
        <div class="form-group">
            <label>菜单图标</label>
            <input type="text" class="form-control" asp-for="Icon" value="@Model.Icon">
        </div>
    </div>
    @Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>
<script src="~/views-resource/menu/_editMenuModal.js" asp-append-version="true"></script>