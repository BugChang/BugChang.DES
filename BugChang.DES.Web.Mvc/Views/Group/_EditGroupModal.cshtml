@model BugChang.DES.Application.Groups.Dtos.GroupEditDto
@using BugChang.DES.Web.Mvc.Models.Common
<form id="GroupEditForm" method="post" asp-controller="Group" asp-action="Edit">
    @Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("修改条码规则"))
    <div class="modal-body">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="CreateBy" value="@Model.CreateBy" />
        <input type="hidden" asp-for="CreateTime" value="@Model.CreateTime" />
        <input type="hidden" asp-for="UpdateBy" value="@Model.UpdateBy" />
        <input type="hidden" asp-for="UpdateTime" value="@Model.UpdateTime" />
        <input type="hidden" id="DefaultValue" data-type="@Model.Type" />
        <div class="form-group">
            <label>名称</label>
            <input type="text" class="form-control" asp-for="Name" value="@Model.Name">
        </div>
        <div class="form-group">
            <label>条码类型</label>
            <select asp-for="Type" class="edit-type-select form-control" style="width: 100%"></select>
        </div>
        <div class="form-group">
            <label>描述</label>
            <textarea class="form-control" asp-for="Description" rows="3">@Model.Description</textarea>
        </div>
    </div>
    @Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>
<script src="~/views-resource/group/_editGroupModal.js" asp-append-version="true"></script>