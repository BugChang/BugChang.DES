@using BugChang.DES.Web.Mvc.Models.Common
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="btn-group">
            <button id="btnAddCard" type="button" class="btn btn-primary" data-toggle="modal" data-target="#CardCreateModal" data-backdrop="static" data-keyboard="false"><i class="fa  fa-plus-circle"></i> 新增</button>
            <button id="btnRefresh" type="button" class="btn btn-primary"><i class="fa  fa-refresh"></i> 刷新</button>
        </div>
    </div>
    <div class="box-body">
        <div class="table-responsive">
            <table id="table" class="table table-bordered table-hover text-nowrap"></table>
        </div>
    </div>
</div>
<div class="modal fade" id="CardCreateModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="CardCreateForm" method="post" asp-controller="Card" asp-action="Create">
                @Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("新增证卡"))
                <div class="modal-body">
                    <div class="form-group">
                        <label>用户</label>
                        <select name="UserId" class="user-select form-control" style="width: 100%"></select>
                    </div>
                    <div class="form-group">
                        <label>证卡编号</label>
                        <input type="text" class="form-control" name="Number">
                    </div>
                    <div class="form-group">
                        <label>证卡卡号</label>
                        <input type="text" class="form-control" name="Value" id="addValue">
                    </div>
                    @Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="CardEditModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

@section scripts
    {
    <script src="~/views-resource/card/index.js" asp-append-version="true"></script>
}