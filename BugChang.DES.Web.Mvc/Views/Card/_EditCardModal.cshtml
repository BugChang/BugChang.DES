@model BugChang.DES.Application.Cards.Dtos.CardEditDto
@using BugChang.DES.Web.Mvc.Models.Common
<form id="CardEditForm" method="post" asp-controller="Card" asp-action="Edit">
    @Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("修改证卡"))
    <div class="modal-body">
        <input type="hidden" asp-for="Id" value="@Model.Id" />
        <input type="hidden" asp-for="CreateBy" value="@Model.CreateBy" />
        <input type="hidden" asp-for="CreateTime" value="@Model.CreateTime" />
        <input type="hidden" asp-for="UpdateBy" value="@Model.UpdateBy" />
        <input type="hidden" asp-for="UpdateTime" value="@Model.UpdateTime" />
        <input type="hidden" asp-for="Enabled" value="@Model.Enabled" />
        <input type="hidden" id="DefaultValue" data-user-id="@Model.UserId" />
        <div class="form-group">
            <label>用户</label>
            <select asp-for="UserId" class="edit-user-select form-control" style="width: 100%"></select>
        </div>
        <div class="form-group">
            <label>证卡编号</label>
            <input type="text" class="form-control" asp-for="Number" value="@Model.Number">
        </div>
        <div class="form-group">
            <label>证卡卡号</label>
            <input type="text" class="form-control" asp-for="Value" value="@Model.Value">
        </div>
    </div>
    @Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
</form>
<script src="~/views-resource/card/_editCardModal.js" asp-append-version="true"></script>