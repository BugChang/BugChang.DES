@using BugChang.DES.Web.Mvc.Models.Common
<div class="box box-primary">
    <div class="box-header with-border">
        <div class="btn-group">
            <button id="btnAddExchangeObject" type="button" class="btn btn-primary" data-toggle="modal" data-target="#ExchangeObjectCreateModal" data-backdrop="static" data-keyboard="false"><i class="fa  fa-plus-circle"></i> 新增</button>
            <button id="btnRefresh" type="button" class="btn btn-primary"><i class="fa  fa-refresh"></i> 刷新</button>
        </div>
    </div>
    <div class="box-body">
        <div class="table-responsive">
            <table id="table" class="table table-bordered table-hover text-nowrap"></table>
        </div>
    </div>
</div>
<div class="modal fade" id="ExchangeObjectCreateModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="ExchangeObjectCreateForm" method="post" asp-controller="ExchangeObject" asp-action="Create">
                @Html.Partial("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel("新增流转对象"))
                <div class="modal-body">
                    <div class="form-group">
                        <label>名称</label>
                        <input type="text" class="form-control" name="Name">
                    </div>
                    <div class="form-group">
                        <label>类型</label>
                        <select name="ObjectType" class="object-type-select form-control" style="width: 100%"></select>
                    </div>
                    <div class="form-group">
                        <label>值</label>
                        <select name="Value" class="object-value-select form-control" style="width: 100%"></select>
                    </div>
                    <input type="hidden" id="createValueText" name="ValueText" value="" />
                    @Html.Partial("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="ExchangeObjectEditModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

@section scripts
    {
    <script src="~/views-resource/exchangeObject/index.js" asp-append-version="true"></script>
}