@model BugChang.DES.Core.Letters.LetterPageSerchModel
@section css
    {
    <link href="~/lib/bootstrap-datetimepicker/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
}
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">查询条件</h3>
    </div>
    <div class="box-body">
        <div class="modal-body">
            <form class="form-inline" id="searchForm">
                <div class="form-group">
                    <label asp-for="LetterNo">信封编号</label>
                    <input type="text" class="form-control" asp-for="LetterNo">
                </div>
                <div class="form-group">
                    <label asp-for="ShiJiNo">市机码</label>
                    <input type="text" class="form-control" asp-for="ShiJiNo">
                </div>
                <div class="form-group">
                    <label asp-for="SendDepartmentId">发件单位</label>
                    <select asp-for="SendDepartmentId" class="form-control department-select" style="min-width: 160px;"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ReceiveDepartmentId">收件单位</label>
                    <select asp-for="ReceiveDepartmentId" class="form-control department-select" style="min-width: 160px;"></select>
                </div>
                <div class="form-group">
                    <label asp-for="BeginTime">开始时间</label>
                    <input type="text" class="form-control search-time" asp-for="BeginTime" />
                </div>
                <div class="form-group">
                    <label asp-for="EndTime">结束时间</label>
                    <input type="text" class="form-control search-time" asp-for="EndTime" />
                </div>
                <button type="button" id="btnSearch" class="btn btn-primary">查询</button>
                <button type="reset" id="btnReset" class="btn btn-default">重置</button>
            </form>
        </div>
    </div>
</div>
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">信件列表</h3>
    </div>
    <div class="box-body">
        <div class="modal-body">
            <div class="table-responsive">
                <table id="table" class="table table-bordered table-hover text-nowrap"></table>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ExchangeLogModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

        </div>
    </div>
</div>
@section scripts
    {
    <script src="~/lib/bootstrap-datetimepicker/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/lib/bootstrap-datetimepicker/js/locales/bootstrap-datetimepicker.zh-CN.js" charset="UTF-8"></script>
    <script src="~/views-resource/letter/search.js" asp-append-version="true"></script>
}