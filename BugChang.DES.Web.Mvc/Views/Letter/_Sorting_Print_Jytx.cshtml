@model BugChang.DES.Web.Mvc.Models.Letter.PrintSortingModel
<style>
    table tbody tr td {
        font-size: 12px;
    }
</style>
<table style="border-collapse: collapse; border: 1px black solid; width: 100%;border-spacing: 0">
    <caption style="font-size: 24px">
        <b>机要文件交寄清单</b>
    </caption>
    <thead>
        <tr>
            <td colspan="10">寄件单位：北京市国家安全局</td>
        </tr>
        <tr>
            <td colspan="10">
                <div style="float: left">
                    发出日期：@DateTime.Now.ToString("yyyy-MM-dd HH:mm")
                </div>
                <div style="float: right">
                    第 @Model.SortingList.ListNo 号 第<span tdata="PageNO" format="0" color="blue">##</span>页
                </div>
            </td>
        </tr>
        <tr>
            <th rowspan="2">格数</th>
            <th rowspan="2">收件单位名称及住址</th>
            <th rowspan="2">号码</th>
            <th colspan="3">件数</th>
            <th rowspan="2">形状</th>
            <th rowspan="2">发件单位</th>
            <th rowspan="2">机要通信编号</th>
            <th rowspan="2">备注</th>
        </tr>
        <tr>
            <th>绝</th>
            <th>机</th>
            <th>秘</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.LetterSortings.Count; i++)
        {
            var letter = Model.LetterSortings[i];
            <tr>
                <td>@(i + 1)</td>
                <td>@letter.ReceiveDepartmentName</td>
                <td>@letter.LetterNo</td>
                <td>@(letter.SecretLevel == 3 ? "1" : "")</td>
                <td>@(letter.SecretLevel == 2 ? "1" : "")</td>
                <td>@(letter.SecretLevel == 1 ? "1" : "")</td>
                <td>信</td>
                <td>@letter.SendDepartmentName</td>
                <td></td>
                <td></td>
            </tr>
        }
        @{
            var left = 15 - Model.LetterSortings.Count % 15;
            if (left != 0)
            {
                for (int k = 0; k < left; k++)
                {
                    <tr>
                        <td>@(15 - left + k + 1)</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                }
            }
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="5">
                本页合计<span tdata="SubCount" format="0" color="blue">##</span>件
            </td>
            <td colspan="4" rowspan="3">
                <div style="margin-left: 10px; float: left;text-align: center">
                    接&nbsp;&nbsp;收&nbsp;&nbsp;人<br />（章）
                    <div style="height: 40px; width: 90px; border: black 1px solid"></div>
                </div>
                <div style="float: right;margin-top: 20px">
                    <div style="float: left; margin-right: 20px;">
                        <img src="~/images/border.png" />
                    </div>
                    <div style="float: right">
                        接
                        <br />
                        收
                        <br />
                        日
                        <br />
                        戳
                    </div>

                </div>
            </td>
            <td colspan="1" rowspan="3"></td>
        </tr>
        <tr>
            <td colspan="5">
                本号单共计<span tdata="PageCount" format="0" color="blue">##</span>页 <span tdata="AllCount" format="0" color="blue">@Model.LetterSortings.Count</span>件
            </td>
        </tr>
        <tr>
            <td colspan="5">
                贴票文件资质￥
            </td>
        </tr>
        <tr>
            <td colspan="10">
                <div style="float: left">
                    登记人：
                </div>
                <div style="float: right">
                    送件人：&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                </div>
            </td>
        </tr>
    </tfoot>
</table>
